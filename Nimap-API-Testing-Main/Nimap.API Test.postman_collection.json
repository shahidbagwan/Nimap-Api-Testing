		{
			"name": "addCustomer",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const response = pm.response.json()\r",
							"\r",
							"pm.test(\"API response Status = 200\", ()=>{\r",
							"    pm.expect(response.Status).to.equal(200)    //should be 201\r",
							"})\r",
							"\r",
							"pm.test(\"Message = Success\", ()=>{\r",
							"    pm.expect(response.Message).to.be.equals(\"Success\")\r",
							"})\r",
							"\r",
							"pm.test(\"Verify generated lead data matches API response\", ()=>{\r",
							"    pm.expect(response.data.LeadName)\r",
							"    .to.equal(pm.environment.get(\"generatedCustomerName\")) \r",
							"     pm.expect(response.data.Email)\r",
							"    .to.equal(pm.environment.get(\"generatedCustomerEmail\"))\r",
							"     pm.expect(response.data.MobileNo)\r",
							"    .to.equal(pm.environment.get(\"generatedCustomerNo\"))\r",
							"})\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"\r",
							"let generatedName = pm.variables.replaceIn('{{$randomFullName}}')\r",
							"let generatedEmail = pm.variables.replaceIn( '{{$randomEmail}}')\r",
							"let generatedNo = pm.variables.replaceIn('{{$randomPhoneNumber}}')\r",
							"\r",
							"pm.environment.set(\"generatedCustomerName\", generatedName)\r",
							"pm.environment.set(\"generatedCustomerEmail\", generatedEmail)\r",
							"pm.environment.set(\"generatedCustomerNo\", generatedNo)\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"LeadName\": \"{{generatedCustomerName}}\",\r\n  \"Email\": \"{{generatedCustomerEmail}}\",\r\n  \"MobileNo\": \"{{generatedCustomerNo}}\"\r\n}\r\n",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseURL}}/CRM/AddLead",
					"host": [
						"{{baseURL}}"
					],
					"path": [
						"CRM",
						"AddLead"
					]
				}
			},
